extends layout
block content
 
    div.row.justify-content-center
        div.col-md-6
            div.card.my-5   
                header.card-header.pinch
                    div.form-row
                        div.col-md-9.form-group 
                            h4.card-title Vendors
                            //- b Hello #{currentUser.firstname}  
                    
                        div.col-md-2.form-group    
                            form.my-2(method="post" action='/logout')
                                button.btn.btn-outline-danger.btn-block(type="submit") Log out
                article.card-body
                    form(method='POST', action="/vendor-profile" enctype='multipart/form-data')
                        input(type='file', name='image')
                        input(type='submit', name='uploadimage', value='Upload Image')
                        div.form-row
                            img.responsive-img(src="upload/" + image, alt='image not found')
                    form(method='POST' action="/vendor-profile")
                        div.form-row
                            div.col.form-group
                                label Add Description
                                textarea.form-control( name="description" rows="3")
                        
                        div.form-row
                            div.col.form-group
                                label Add Address
                                input.form-control( name="address")
                            
                        div.form-row
                            div.col.form-group
                                label Booking details
                                textarea.form-control( name="booking" rows="2")
                        div.form-row
                            div.col-md-6.form-group
                                button.btn.btn-primary.btn-block(type="submit") Update Profile         


        
               
